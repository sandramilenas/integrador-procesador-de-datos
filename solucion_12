import pandas as pd
from sklearn.model_selection import train_test_split
from sklearn.ensemble import RandomForestClassifier
from sklearn.metrics import confusion_matrix, accuracy_score, f1_score


# Lee los datos procesados
df = pd.read_csv('integrador-procesador-de-datos\datos_procesados2.csv')

# Eliminar la columna 'categoria_edad' del DataFrame
df = df.drop('categoria_edad', axis=1)

# Definir X y y
X = df.drop('DEATH_EVENT', axis=1)
y = df['DEATH_EVENT']

# Realizar la partici贸n del conjunto de datos de forma estratificada
X_train, X_test, y_train, y_test = train_test_split(X, y, test_size=0.2, stratify=y, random_state=42)

# Ajustar el modelo de Random Forest
clf = RandomForestClassifier(n_estimators=100, max_depth=5, random_state=42)
clf.fit(X_train, y_train)

# Realizar predicciones en el conjunto de pruebas y calcular la matriz de confusi贸n
y_pred = clf.predict(X_test)
conf_matrix = confusion_matrix(y_test, y_pred)
print("Matriz de Confusi贸n:")
print(conf_matrix)

# Calcular el F1-Score y compararlo con el accuracy
f1 = f1_score(y_test, y_pred)
accuracy = accuracy_score(y_test, y_pred)
print(f"F1-Score: {f1}")
print(f"Precisi贸n en el conjunto de pruebas: {accuracy}")